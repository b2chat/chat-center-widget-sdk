{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "./dist",
    "declaration": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
